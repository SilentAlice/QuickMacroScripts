// Do one march (There are at least one march finished 
Function doMarch()
	TracePrint "DoMarch"
	tapBtn(1) 	// Enter select
	Delay (slice)
	
	tapBtn(13) 	// Select march
	Delay (slice) 
	
	If getPage() <> 3 Then // Test March Page
		doMarch = False
		Exit Function
	End If

	KeepCapture 
	If FindStr(238,1554,988,1617,"收","FFFFFF-332A28",0.9,intX,intY) > -1 // Found
		ReleaseCapture
		Tap(intX, intY) // Reap march
		Delay (slice)
		
		Tap(intX, intY) // Tap to continue
		Delay (slice)
		
		Tap(intX, intY) // March this one again
		Delay(slice*2)
		If getPage() <> 51 Then // Test Team page
			doMarch = False
			Exit Function
		End If
		If getTeam(0) < 0 Then 
			doMarch = False
			Exit Function
		End If
		tapBtn(7) // 远征开始Btn
		Delay (slice)
		
		tapBtn(0) // Return to main
		Delay (slice)
		doMarch = True
		Exit Function
	End If
	doMarch = False
	Exit Function
End Function

Function doPVE()
	Dim i, tmp
	Dim curTurn = 0
	tapBtn (1)
	Delay (slice)
	tapBtn (11)
	Delay (2*slice)
	tmp = getChapter() - chapter
	// Choose right chapter
	If tmp < 0 Then // Need to tap next chapter
		tmp = tmp * (-1)
		For i = 1 To tmp
			tapBtn (4)
			Delay (slice)
		Next
	Else 
		For i = 1 To tmp
			tapBtn (3)
			Delay (slice)
		Next
	End If
	
	// Choose right section
	tmp = getSection() - section
	If tmp < 0 Then // Need to tap next chapter
		tmp = tmp * (-1)
		For i = 1 To tmp
			tapBtn (6)
			Delay (slice)
		Next
	Else 
		For i = 1 To tmp
			tapBtn (5)
			Delay(slice)
		Next
	End If
	
	// Right one
	Tap 600, 1000
	Delay (slice)
	
	getTeam (team)
	
	tap(970, 1810) // Qucik supply
	Delay (slice)
	tap(290, 1280) // Supply all
	Delay (2 * slice)
	While (getPage() <> 51)
		Delay(2 * slice)
	Wend
	tapBtn (7)	// Start battle
	
	Do
		If battle() = False Then 
			doPVE = False
			Exit Function
		End If
		
		If getPage() = 100 Then 
			doPVE = True
			Exit Function
		End If
		
		curTurn = curTurn + 1
		If curTurn >= turn Then 
			doPVE = True
			Tap 330, 1180
			Exit Function
		End If
		
		
		
		If needFun(2) Then 
			doPVE = True
			// TODO Return to Main
			Exit Function
		End If
		
		Tap 330, 730 // Go on
		Delay (slice)
	Loop
End Function

// Return an avaliable team
Function getTeam(num)

If num = 0 Then
	Dim i
	For i = 0 To 3
		Tap(360, i*190 + 710) // Team 1-4	
		Delay (0.5*slice)
		KeepCapture 
		
		If	FindColor(122,928,148,958,"008EF3", 0, 0.9, intX, intY) > -1 Then
			ReleaseCapture 
			getTeam = i+1 // Get avaliabe team
			Exit Function
		End If
		Delay (slice)
		ReleaseCapture 
	Next
ElseIf num > 0 And num < 5 Then
	Tap (360, (num-1)*190 + 710) // Choose needed team
	Delay (0.5 * slice)
	getTeam = num
Else 
	getTeam = -1
End If
getTeam = -1
End Function

