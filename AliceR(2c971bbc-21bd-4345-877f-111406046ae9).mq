// needFun, 0:Quest, 1:March
Function needFun(op)
	Dim ret = False
	KeepCapture
	Select Case op
	Case 0 // Quest
		If FindColor(76,879,106,908, "0207BF", 0, 0.9, intX, intY) > -1 Then 
			ret = True
		End If

	Case 1 // March	
		If FindStr(887,1490,924,1523,"完","3145D6-D6402D",0.9,intX,intY) > -1 Then 
			ret = True
		End If
	Case 2 // need to return?
		ret = True
	Case Else
		TracePrint "Wrong needFun op"
		ret = False
	End Select
	ReleaseCapture
	needFun = ret
End Function

