Function getChapter()
	KeepCapture 
	Dim ret = CInt(Ocr(953,512,1012,601,"FFFFFF-332A28",0.8))
	If ret > 10 Then 
		ret = CInt((ret-5) / 10)
	End If
	ReleaseCapture
	getChapter = ret
End Function

Function getSection()
